@page "/settings/{UserUrl}"
@rendermode InteractiveServer

<PageTitle>@UserUrl</PageTitle>


  <style>
          *, :after, :before {
          box-sizing: border-box;
      }

      body {
        min-height: 100vh;
        background-color: #232227;
        color: #ffffff;
        -webkit-font-smoothing: antialiased;
        font-family: Inter, ui-sans-serif, system-ui, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", Segoe UI Symbol, "Noto Color Emoji";
        overflow-x: hidden;
        overflow-y: hidden;
        min-width: 320px;
        font-size: 1rem; 
      }

      p {
          margin: 0;
      }

      a {
          color: #ffffff;
          text-decoration: none;
      }

      .container {
          max-width: 1128px;
          margin: 0 auto;
          padding-left: 1rem;
          padding-right: 1rem;
          margin-top: -5rem;
      }

      .flex {
          display: flex;
      }

      .items-center {
          align-items: center;
      }

      .justify-center {
          justify-content: center;
      }

      .min-h-screen {
          min-height: 100vh;
      }

      .button {
          padding: .75rem 1.75rem;
          font-size: .875rem;
          line-height: 1.25rem;
          font-weight: 500;
          border-width: 1px;
          background-color: #1f2937;
          border-radius: 0.5rem;
          outline: none;
          border: none;
          display: flex;
          align-items: center;
          justify-content: center;
          cursor: pointer;
      }

      .button:hover{
          background-color: gray;
      }

      .button-danger {
          background-color: #ca0202;
          color: #ffffff;
      }

      .button-danger:hover {
          transition: all .5s ease;
          background-color: #e65151;
      }

      .button-group .button {
          border-radius: 0;
      }

      .profile-card {
          display: flex;
          flex-direction: column;
          position: relative;
          overflow: hidden;
          height: auto;
          background-color: #18181b;
          box-shadow: 0px 0px 15px 0px rgba(0, 0, 0, .06), 0px 2px 30px 0px rgba(0, 0, 0, .22), inset 0px 0px 1px 0px hsla(0, 0%, 100%, .15);
          border-radius: 14px;
          max-width: 36rem;
          padding: 0.5rem;
      }

      .profile-card__header {
          display: flex; 
          z-index: 10; 
          padding: 0.75rem; 
          padding-left: 1rem;
          padding-right: 1rem; 
          padding-bottom: 0; 
          padding-top: 1rem; 
          flex-direction: column; 
          flex-shrink: 0; 
          justify-content: flex-start; 
          align-items: flex-start; 
          width: 100%; 
          -webkit-font-smoothing: auto;
          -moz-osx-font-smoothing: auto; 
      }

      .profile-card__body {
          display: grid;
          overflow-y: auto; 
          position: relative; 
          padding: 0.75rem; 
          flex-direction: column; 
          flex: 1 1 auto; 
          grid-template-columns: repeat(2, minmax(0, 1fr)); 
          gap: 1rem; 
          width: 100%; 
          height: auto; 
          -webkit-font-smoothing: auto;
          -moz-osx-font-smoothing: auto; 
          text-align: left; 
          overflow-wrap: break-word; 


        
      }
      media (min-width: 768px) { 
          .profile-card__body {
              grid-template-columns: repeat(2, minmax(0, 1fr)); 
          }
      }

      .profile-card__footer {
          display: flex; 
          overflow: hidden; 
          padding: 0.75rem; 
          margin-top: 1rem; 
          gap: 0.5rem; 
          justify-content: flex-end; 
          align-items: center; 
          width: 100%; 
          height: auto; 
          -webkit-font-smoothing: auto;
          -moz-osx-font-smoothing: auto; 
      }

      .profile-card__header--title {
          font-size:  1.125rem;
          line-height: 1.75rem;
      }

      .profile-card__header--info {
          display: flex; 
          padding-top: 1rem;
          padding-bottom: 1rem; 
          gap: 1rem; 
      }

      .profile-card__header--avatar-wrapper {
          display: inline-flex; 
          position: relative; 
          flex-shrink: 0; 
      }

      .profile-card__header--avatar {
          box-sizing: border-box; 
          display: flex; 
          overflow: hidden; 
          position: relative; 
          z-index: 0; 
          justify-content: center; 
          align-items: center; 
          border-radius: 9999px; 
          outline-style: none; 
          width: 3.5rem; 
          height: 3.5rem; 
          vertical-align: middle; 
      }

      .profile-card__header--avatar-img {
          display: flex; 
          object-fit: cover; 
          width: 100%; 
          height: 100%; 
          transition-property: opacity;
          transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
          transition-duration: 300ms; 
          opacity: 1;
      }

      .profile-card__header--info-wrapper {
          display: flex; 
          flex-direction: column; 
          justify-content: center; 
          align-items: flex-start; 
      }

      .profile-card__header--info-wrapper p {
          font-weight: 500;
      }

      .profile-card__header--info-wrapper span{
          font-size: 0.875rem;
          line-height: 1.25rem; 
          color: #a1a1aa;
      }

      .input-wrapper {
          display: flex; 
          position: relative; 
          flex-direction: column; 
          justify-content: flex-end; 
          width: 100%; 
      }

      .input-wrapper label {
          font-size: 12px;
          margin-bottom: 5px;
      }

      .input-wrapper .input {
          width: 100%; 
          height: 100%; 
          font-weight: 400; 
          background-color: white;
          border: none;
          outline: none;
          padding: .75rem 1rem;
          border-radius: 14px;
      }

      .input {
          border: 1px solid #ca1c1c;
          padding: 10px;
          font-size: 16px; 
      }

      .profile-card__header {
          display: flex;
          justify-content: space-between;
          align-items: center; 
      }
      .profile-card__header--edit-button {
          background-color: gray;
          border-radius: 14px;
          border: none;
          color: white;
          cursor: pointer;
          padding: 8px 12px;
          margin-left: 160px;
          font-size: 10px;
          height: 4%;
      }
    </style>

      <div class="container flex items-center justify-center min-h-screen">
        <div class="profile-card">
          <div class="profile-card__header">
            <p class="profile-card__header--title">Profile</p>
            <div class="profile-card__header--info">
              <div class="profile-card__header--avatar-wrapper">
                  <span class="profile-card__header--avatar">
                      <img src="https://cdn3d.iconscout.com/3d/premium/thumb/boy-9251893-7590885.png?f=webp" class="profile-card__header--avatar-img" loading="lazy" />
                  </span>
                
              </div>
              <div class="profile-card__header--info-wrapper">
                  <p>사용자</p>
              </div>
              <button class="profile-card__header--edit-button" @onclick = "ImageSaveButtonClick">이미지 수정</button>
            </div>
          </div>

          <div class="profile-card__body">
            <div class="input-wrapper">
              <label for="">Username</label>
              <input class="input" placeholder="Enter username" />
            </div>

            <div class="input-wrapper">
              <label for="">ID</label>
              <input class="input" placeholder="Enter ID" />
            </div>

            <div class="input-wrapper">
              <label for="">Password</label>
              <input class="input" type="password" placeholder="Enter password" />
            </div>

            <div class="input-wrapper">
              <label for="">Mail</label>
              <input class="input" placeholder="Enter mail" />
            </div>

            <div class="input-wrapper">
              <label for="">Association</label>
              <input class="input" placeholder="Enter Association" />
            </div>

            <div class="input-wrapper">
              <label for="">Message</label>
              <input class="input" placeholder="Enter message" />
            </div>
          </div>

          <div class="profile-card__footer">
            <a href="/index.html" class="button" @onclick="SaveButtonClick"> 저장 </a>
            <a href="/index.html" class="button button-danger" @onclick="CancelButtonCLick"> 취소 </a>
          </div>
        </div>
      </div>

@page "/AddFile/{RepoUrl}"

<PageTitle>@RepoUrl</PageTitle>

<style>

    body {
        height: 500px;
        background-color: black;
        color: #ffffff;
        -webkit-font-smoothing: antialiased;
        overflow-x: hidden;
        overflow-y: hidden;
        min-width: 320px;
        font-size: 1rem;
    }

    .code-editor-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 600px;
        background-color: #2a2a2e;
        border-radius: 14px;
        padding: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        margin-bottom: 10px;
        margin-top : 5px;
    }

    .file-name-input {
        flex-grow: 1;
        padding: 7px;
        margin-right: 780px;
        margin-top: -20px;
        font-size: 16px;
        border: 1px solid #555;
        border-radius: 5px;
        background-color: #3a3a3e;
        color: #e0e0e0;
    }

    .button-container {
        display: flex;
        align-items: center;
        justify-content: space-between; 
        margin-top: 40px;
        width: 95%; 
    }

    .save-button {
        padding: 10px 20px;
        font-size: 16px;
        cursor: pointer;
        background-color: gray;
        margin-top: -20px;
        border: none;
        border-radius: 5px;
        color: white;
        transition: background-color 0.3s ease;
    }

    .code-input {
        width: 100%;
        height: 80%;
        padding: 20px;
        font-size: 16px;
        box-sizing: border-box;
        margin-top: 0px;
        border: 1px solid #555;
        border-radius: 5px;
        background-color: #1e1e1e;
        color: #e0e0e0;
        resize: none;
        font-family: 'Courier New', Courier, monospace;
    }

    .repo-url {
        margin-top: -15px;
        font-size: 35px;
        color: white;
        margin-right: 10px;
    }

</style>

<div class="code-editor-container">
    <div class="button-container">
        <div class="repo-url">
            <ul>
                <li>@RepoUrl/</li>
            </ul>
        </div>
        
        <input type="text" placeholder="파일 이름을 입력하세요" class="file-name-input" />
        <button class="save-button" @onclick="SaveButtonClick">Save</button>
    </div>
    <textarea class="code-input"></textarea>
</div>
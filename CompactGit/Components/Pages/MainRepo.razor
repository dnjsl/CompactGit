@page "/r/{UserUrl}/{RepoUrl}"
@rendermode InteractiveServer

<PageTitle>@UserUrl/@RepoUrl</PageTitle>

<style>

    body {
        min-height: 100vh;
        background-color: #232227;
        color: #ffffff;
        -webkit-font-smoothing: antialiased;
        overflow-x: hidden;
        overflow-y: hidden;
        min-width: 320px;
        font-size: 1rem;
    }

    .container {
        max-width: 1128px;
        margin: 0 auto;
        padding-left: 0.5rem;
        padding-right: 1rem;
        display: flex;
        flex-direction: column;
    }

    .flex {
        display: flex;
    }

    .items-center {
        align-items: center;
    }

    .justify-center {
        justify-content: center;
    }

    .min-h-screen {
        min-height: 100vh;
    }

    .button {
        padding: 0.55rem 1.65rem;
        font-size: 0.865rem;
        line-height: 1.25rem;
        font-weight: 500;
        border-width: 1px;
        background-color: gray;
        border-radius: 0.5rem;
        outline: none;
        border: none;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
    }

    .file-list-box {
        display: flex;
        flex-direction: column;
        position: relative;
        overflow: hidden;
        height: 600px;
        width: 80px;
        background-color: #18181b;
        border-radius: 14px;
        padding: 0.5rem;
        margin-left: 0px;
    }

    .code-box {
        display: flex;
        flex-direction: column;
        position: relative;
        overflow: hidden;
        height: 650px;   
        border-radius: 14px;
        padding: 0.5rem;
        flex: 1;
        margin-left: 0px;
    }

    .edit-button-position {
        display: flex;
        justify-content: flex-end;
        align-items: center;
        padding: 0.75rem;
        padding-left: 1rem;
        padding-right: 1rem;
        padding-bottom: 0;
        padding-top: 1rem;
        flex-shrink: 0;
        width: 100%;
    }

    .file-list-text {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.75rem;
        padding-left: 1rem;
        padding-right: 1rem;
        padding-bottom: 0;
        padding-top: 1rem;
        flex-shrink: 0;
        width: 100%;
    }

    .file-list-text--title {
        font-size: 1.125rem;
        line-height: 1.75rem;
    }

    .code-body {
        display: flex;
        position: relative;
        padding: 0.8rem;
        flex-direction: column;
        flex: 1 1 auto;
        width: 100%;
        height: auto;
        text-align: left;
        overflow-wrap: break-word;
    }

    .file-list {
        width: 20%;
        padding-right: 1rem;
    }

        .file-list ul {
            list-style: none;
            padding: 0;
        }

        .file-list li {
            padding: 0.5rem;
            cursor: pointer;
        }

            .file-list li:hover {
                background-color: #2a2a2e;
            }

    .code {
        background-color: #2a2a2e;
        padding: 13rem;
        border-radius: 14px;
        color: #a1a1aa;
        font-family: monospace;
    }

    .buttons {
        display: flex;
        overflow: hidden;
        padding: 0.65rem;
        margin-top: 0.5rem;
        gap: 0.5rem;
        justify-content: flex-end;
        align-items: center;
        width: 100%;
        height: auto;
    }

    .edit-button {
        background-color: gray;
        border-radius: 14px;
        border: none;
        color: white;
        cursor: pointer;
        padding: 8px 12px;
        font-size: 12px;
    }

 
</style>

    <div class="flex min-h-screen">
        <div class="file-list-box  file-list">
            <div class="file-list-text">
                <span class="file-list-text--title">File List</span>
            </div>
            <div class="code-body">
                <ul>
                    <li>File1.txt</li>
                    <li>File2.txt</li>
                    <li>File3.txt</li>
                </ul>
            </div>
        </div>
        <div class="code-box">
            <div class="edit-button-position">
                <button class="edit-button">Edit</button>
            </div>
            <div class="code-body">
                <pre class="code">
                // Selected file's code 
                </pre>
            </div>
            <div class="buttons">
                <button class="button">Add File</button>
                <button class="button">Other Commits</button>
                <button class="button">Delete Repo</button>
            </div>
        </div>
       
    </div>
    




@page "/user/{UserUrl}"
@rendermode InteractiveServer

<PageTitle>@UserUrl</PageTitle>

<div>
    <h1>@UserUrl</h1>
</div>

<div>
    <p class="form form-floating mb-3">
        <input type="text" name="find" class="form-control" @bind=FindInput @onkeydown="FindRepoEnter" />
        <label>[User name]/[Repository name]</label>
    </p>
</div>

<div class="My_repo">
    <p>
        <button id="My_repo" class="btn btn-primary" type="button" @onclick="ReposButtonClick" hidden=@IsNotMyProfile>My Repository</button>
        <button id="Settings" class="btn btn-primary" type="button" @onclick="SettingsButtonClickAsync" hidden=@IsNotMyProfile>Settings</button>
        <button id="Settings" class="btn btn-primary" type="button" @onclick="LogoutButtonClickAsync" hidden=@IsNotMyProfile>Logout</button>
    </p>
</div>

<div class="Introduce">
    <h3>Introduce</h3>
</div>
